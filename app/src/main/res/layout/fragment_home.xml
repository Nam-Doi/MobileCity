<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- ðŸ”¹ Thanh top bar -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_gradient_background"
        android:elevation="4dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_home"
            android:layout_marginEnd="10dp" />

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="TÃ¬m kiáº¿m sáº£n pháº©m..."
            android:background="@drawable/bg_search_box"
            android:paddingHorizontal="12dp"
            android:drawableEnd="@drawable/ic_search"
            android:drawableTint="@color/primary_blue"
            android:drawablePadding="8dp"
            android:textSize="14sp"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="#6800c8"
            android:src="@drawable/ic_menu"
            android:contentDescription="Menu"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- ðŸ”¹ Khung chá»©a sáº£n pháº©m vÃ  loading -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- GridView hiá»ƒn thá»‹ sáº£n pháº©m -->
        <GridView
            android:id="@+id/gridViewProducts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="8dp"
            android:horizontalSpacing="8dp"
            android:verticalSpacing="8dp"
            android:numColumns="2"
            android:gravity="center"
            android:scrollbarStyle="outsideOverlay"
            android:stretchMode="columnWidth"
            android:overScrollMode="always"
            android:fadingEdge="none" />


        <!-- Thanh loading -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </FrameLayout>

</LinearLayout>
